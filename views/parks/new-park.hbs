<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo parque temático</h1>
    </div>

    <div class="col-md-6">

      <form action="/park/new-park" method="post">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>
        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input">
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label name="active" class="form-check-label" for="exampleCheck1">active</label>
        </div>
        <br>
        <p>{{errorMsg}}</p>
        <br>
        <button type="submit" class="btn btn-dark">Crear parque</button>
      </form>
    </div>

  </div>
</div>